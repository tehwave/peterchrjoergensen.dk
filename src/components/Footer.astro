---
/**
 * Footer doubling as contact section.
 *
 * Combines social links with a call-to-action, avoiding a separate contact page.
 * rel="me" on social links enables IndieWeb identity verification.
 */
type Props = Record<string, never>;
---

<footer class="footer" id="contact">
  <div class="footer__container">
    <div class="footer__content">
      <div class="footer__heading-group">
        <span class="footer__label">I'm open</span>
        <h2 class="footer__heading">Got something worth building?</h2>
      </div>
      <div class="footer__info">
        <p class="footer__text">
          Feel free to reach out via <a
            href="mailto:hello@peterchrjoergensen.dk"
            class="footer__email">email</a
          > or connect with me on social media to collaborate.
        </p>
        <div class="footer__social-links">
          <a
            href="https://www.linkedin.com/in/peterchrjoergensen"
            aria-label="LinkedIn"
            target="_blank"
            rel="noopener me"
            class="footer__social-link"
          >
            <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </a>
          <a
            href="https://github.com/peterchrjoergensen"
            aria-label="GitHub"
            target="_blank"
            rel="noopener me"
            class="footer__social-link"
          >
            <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.840 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.430.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
          <a
            href="https://twitter.com/tehwave"
            aria-label="Twitter/X"
            target="_blank"
            rel="noopener me"
            class="footer__social-link"
          >
            <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    <p class="footer__tagline">
      Made with <span class="footer__heart">â™¥</span> in Denmark
    </p>
  </div>
</footer>

<style lang="scss">
  @use "../styles/variables" as *;
  @use "../styles/mixins" as *;

  .footer {
    background-color: $color-blue-dark;
    padding: $space-4xl $space-xl;

    @include respond-to(md) {
      padding: $space-3xl $space-lg;
    }

    &__container {
      max-width: $max-width;
      margin: 0 auto;
    }

    &__content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: $space-3xl;
      align-items: start;

      @include respond-to(md) {
        grid-template-columns: 1fr;
        gap: $space-xl;
      }
    }

    &__heading-group {
      display: flex;
      flex-direction: column;
      gap: $space-sm;
    }

    &__label {
      color: $color-orange;
      font-size: $font-size-sm;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }

    &__heading {
      font-family: "Caveat", cursive;
      font-size: clamp($font-size-4xl, 8vw, 5rem);
      color: $color-text-light;
      font-weight: 700;
      line-height: $leading-tight;
    }

    &__info {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: $space-lg;
    }

    &__text {
      font-size: $font-size-lg;
      color: rgba($color-text-light, 0.8);
      line-height: $leading-relaxed;
      max-width: 400px;
    }

    &__email {
      color: $color-text-light;
      font-weight: 600;
      text-decoration: underline;
      text-decoration-color: $color-orange;
      text-decoration-thickness: 2px;
      text-underline-offset: 3px;
      border-radius: 4px;
      @include focus-visible;

      &:hover {
        color: $color-orange;
      }
    }

    &__social-links {
      display: flex;
      gap: $space-lg;
      margin-top: $space-md;
    }

    &__social-link {
      color: $color-text-light;
      opacity: 0.7;
      @include transition(all, 0.2s);
      border-radius: 4px;
      @include focus-visible;

      &:hover {
        opacity: 1;
        color: $color-orange;
        transform: translateY(-2px);
      }

      svg {
        width: 24px;
        height: 24px;

        @include respond-to(md) {
          width: 20px;
          height: 20px;
        }
      }
    }

    &__tagline {
      color: $color-text-light;
      font-size: $font-size-sm;
      opacity: 0.6;
      text-align: center;
      margin-top: $space-3xl;
    }

    &__heart {
      color: $color-orange;
    }
  }
</style>

---
import SkillTag from "./SkillTag.astro";
import AnimateOnScroll from "./AnimateOnScroll.astro";

type Props = Record<string, never>;
---

<section class="about" id="about">
  <div class="about__container">
    <AnimateOnScroll class="about__left">
      <span class="about__label">ABOUT</span>
      <h2 class="about__heading">Building things<br />that matter</h2>
    </AnimateOnScroll>
    <AnimateOnScroll class="about__right" delay={0.15}>
      <div class="about__content">
        <h3 class="about__subheading">I love making things work.</h3>
        <p class="about__text">
          I'm a <strong>web developer</strong> and <strong>game developer</strong> based in 
          <strong>Denmark</strong>. By day, I build web applications with 
          <strong>Laravel</strong> and <strong>WordPress</strong>. By night, I'm probably 
          tinkering with a game prototype or diving into some new AI tool.
        </p>
        <p class="about__text">
          I've been running <strong>gm48</strong> — a game jam community — since 2013. 
          There's something special about watching hundreds of developers create games in 
          48 hours. It keeps me connected to why I started making things in the first place.
        </p>
        <p class="about__text">
          What I enjoy most is solving tricky problems, whether that's optimizing a VR game 
          to run on budget phones or figuring out the cleanest architecture for a complex web app.
        </p>
        <div class="about__skills">
          <SkillTag label="Laravel" />
          <SkillTag label="WordPress" />
          <SkillTag label="Unity" />
          <SkillTag label="Vue.js" />
          <SkillTag label="PHP" />
          <SkillTag label="JavaScript" />
          <SkillTag label="C#" />
          <SkillTag label="TypeScript" />
        </div>
      </div>
    </AnimateOnScroll>
  </div>
</section>

<style lang="scss">
  @use "../styles/variables" as *;
  @use "../styles/mixins" as *;

  .about {
    position: relative;
    padding: $space-4xl $space-xl;

    @include respond-to(md) {
      padding: $space-3xl $space-lg;
    }

    &__container {
      position: relative;
      z-index: 1;
      max-width: $max-width;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1.5fr;
      gap: $space-4xl;

      @include respond-to(lg) {
        grid-template-columns: 1fr;
        gap: $space-2xl;
      }
    }

    &__left {
      display: flex;
      flex-direction: column;
      gap: $space-lg;
    }

    &__label {
      color: $color-orange;
      font-size: $font-size-sm;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }

    &__heading {
      font-size: clamp($font-size-2xl, 4vw, $font-size-3xl);
      color: $color-text-dark;
      line-height: 1.2;
    }

    &__right {
      display: flex;
      align-items: center;
    }

    &__content {
      border-left: 3px solid $color-orange;
      padding-left: $space-xl;

      @include respond-to(lg) {
        border-left: none;
        border-top: 3px solid $color-orange;
        padding-left: 0;
        padding-top: $space-lg;
      }
    }

    &__subheading {
      font-size: $font-size-xl;
      color: $color-text-dark;
      margin-bottom: $space-lg;

      @include respond-to(md) {
        font-size: $font-size-lg;
      }
    }

    &__text {
      font-size: $font-size-base;
      color: $color-text-muted;
      line-height: 1.8;
      margin-bottom: $space-lg;

      strong {
        color: $color-text-dark;
        font-weight: 600;
      }
    }

    &__skills {
      display: flex;
      flex-wrap: wrap;
      gap: $space-md;
      margin-top: $space-xl;
    }
  }
</style>

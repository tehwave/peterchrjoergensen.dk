---
import { Picture } from "astro:assets";
import profileImage from "../assets/peter-profile.png";

type Props = Record<string, never>;

const roles = [
  "Web Developer",
  "Web Designer",
  "Game Developer", 
  "Game Designer",
  "AI Enthusiast",
];
---

<div class="hero-wrapper">
  <section class="hero" id="hero" data-tilt>
    <div class="hero__container">
      <div class="hero__content">
        <h1 class="hero__title hero__title--handwriting">Hello!</h1>
        <div class="hero__intro">
          <p>I'm <strong>Peter</strong> — <strong class="hero__role-wrapper">
              <span class="hero__role-container">
                {roles.map((role, index) => (
                  <span class="hero__role" data-role-index={index}>
                    {role}
                  </span>
                ))}
              </span>
            </strong> from <strong>Denmark.</strong>
          </p>
          <p>I make websites and games that make people feel something.</p>
          <p class="hero__subline">Not just functional. Not just pretty. Meaningful.</p>
        </div>
      </div>
      <div class="hero__image-wrapper">
        <Picture 
          src={profileImage} 
          formats={["avif", "webp"]}
          alt="Peter Chr. Jørgensen" 
          class="hero__image"
          width={400}
          height={500}
          loading="eager"
        />
      </div>
    </div>
  </section>
</div>

<script>
  const wrapper = document.querySelector('.hero__role-wrapper') as HTMLElement;
  const container = document.querySelector('.hero__role-container') as HTMLElement;
  const roles = document.querySelectorAll('.hero__role');
  const roleCount = roles.length;
  let currentIndex = 0;

  const roleHeight = (roles[0] as HTMLElement).offsetHeight;
  
  // Measure natural widths by cloning with computed styles
  const roleWidths = Array.from(roles).map(role => {
    const el = role as HTMLElement;
    const styles = window.getComputedStyle(el);
    const clone = el.cloneNode(true) as HTMLElement;
    clone.style.position = 'absolute';
    clone.style.visibility = 'hidden';
    clone.style.width = 'auto';
    clone.style.whiteSpace = 'nowrap';
    clone.style.fontSize = styles.fontSize;
    clone.style.fontFamily = styles.fontFamily;
    clone.style.fontWeight = styles.fontWeight;
    clone.style.letterSpacing = styles.letterSpacing;
    document.body.appendChild(clone);
    const width = Math.ceil(clone.getBoundingClientRect().width);
    document.body.removeChild(clone);
    return width;
  });

  function updateWidth() {
    wrapper.style.width = `${roleWidths[currentIndex]}px`;
  }

  // Set initial width
  updateWidth();

  function updateRole() {
    currentIndex = (currentIndex + 1) % roleCount;
    const offset = currentIndex * roleHeight;
    container.style.transform = `translateY(-${offset}px)`;
    updateWidth();
  }

  setInterval(updateRole, 2500);
</script>

<style lang="scss">
  @use "../styles/variables" as *;
  @use "../styles/mixins" as *;

  .hero-wrapper {
    padding: $space-md;
    max-width: 1700px;
    margin: 0 auto;
    perspective: 1200px;
    perspective-origin: center center;

    @include respond-to(md) {
      padding: $space-sm;
      max-width: 100%;
    }
  }

  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: $space-4xl $space-xl;
    padding-top: calc($space-4xl + 60px);
    background-color: $color-blue;
    background-image: 
      url("data:image/svg+xml;charset=utf-8,%3Csvg width='52' height='26' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 10c0-2.21-1.79-4-4-4a6 6 0 01-6-6h2c0 2.21 1.79 4 4 4a6 6 0 016 6c0 2.21 1.79 4 4 4a6 6 0 016 6c0 2.21 1.79 4 4 4v2a6 6 0 01-6-6c0-2.21-1.79-4-4-4a6 6 0 01-6-6zm25.464-1.95l8.486 8.486-1.414 1.414-8.486-8.486 1.414-1.414z' fill='%23DCEEFB' fill-opacity='.08' fill-rule='evenodd'/%3E%3C/svg%3E");
    border-radius: $space-lg;
    position: relative;
    box-shadow: 
      0 10px 30px -5px rgba(0, 0, 0, 0.2),
      0 20px 50px -10px rgba(0, 0, 0, 0.15);
    transform-style: preserve-3d;
    transition: transform 0.15s ease-out, box-shadow 0.3s ease-out;
    will-change: transform;

    // Floating layer effect for content
    &::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: inherit;
      background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.1) 0%,
        rgba(255, 255, 255, 0) 50%,
        rgba(0, 0, 0, 0.05) 100%
      );
      pointer-events: none;
      transform: translateZ(2px);
    }

    // Enhance shadow on tilt
    &.is-tilting {
      box-shadow: 
        0 15px 40px -8px rgba(0, 0, 0, 0.25),
        0 25px 55px -12px rgba(0, 0, 0, 0.18);
    }

    @include respond-to(md) {
      padding: $space-3xl $space-lg;
      padding-top: calc($space-3xl + 60px);
      border-radius: $space-md;
      min-height: auto;
    }

    &__container {
      max-width: $max-width;
      margin: 0 auto;
      width: 100%;
      display: grid;
      grid-template-columns: 1.2fr 0.8fr;
      gap: $space-4xl;
      align-items: center;

      @include respond-to(lg) {
        grid-template-columns: 1fr;
        gap: $space-2xl;
        text-align: center;
      }
    }

    &__content {
      transform: translateZ(15px);
      
      @include respond-to(lg) {
        order: 2;
        transform: none;
      }
    }

    &__title {
      font-size: $font-size-hero;
      font-weight: 300;
      font-style: italic;
      line-height: 1;
      color: $color-text-light;
      margin-bottom: $space-2xl;

      &--handwriting {
        font-family: "Caveat", cursive;
        font-weight: 700;
        font-style: normal;
        font-size: calc(#{$font-size-hero} * 1.3);
      }
    }

    &__intro {
      font-size: clamp($font-size-lg, 2.5vw, $font-size-2xl);
      color: $color-text-light;
      line-height: 1.6;

      p {
        margin: 0 0 $space-sm 0;
      }

      strong {
        font-weight: 600;
      }
    }

    &__subline {
      font-size: clamp($font-size-base, 2vw, $font-size-lg);
      color: rgba($color-text-light, 0.7);
      font-style: italic;
      margin-top: $space-md;
    }

    &__role-wrapper {
      --role-height: 1.6em;
      color: $color-orange;
      display: inline-block;
      position: relative;
      overflow: hidden;
      height: var(--role-height);
      vertical-align: bottom;
      transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    &__role-container {
      display: block;
      transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    &__role {
      display: block;
      height: var(--role-height);
      line-height: 1.6;
      white-space: nowrap;
    }

    &__image-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;

      @include respond-to(lg) {
        order: 1;
      }
    }

    &__image {
      width: 100%;
      max-width: 320px;
      height: auto;
      border-radius: 1000px;
      object-fit: cover;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      border: 4px solid rgba(255, 255, 255, 0.1);
      transform: translateZ(20px);
      transition: transform 0.3s ease-out;

      @include respond-to(md) {
        max-width: 250px;
        transform: none;
      }
    }

    &__scroll-indicator {
      position: absolute;
      bottom: $space-3xl;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: $space-sm;
      color: $color-text-light;
      font-size: $font-size-xs;
      font-weight: 600;
      letter-spacing: 0.15em;
      opacity: 0.7;
      animation: bounce 2s infinite;

      @include respond-to(md) {
        display: none;
      }
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
</style>

<script>
// 3D Tilt effect
const hero = document.querySelector('.hero') as HTMLElement;
const tiltElement = document.querySelector('[data-tilt]') as HTMLElement;
const maxTilt = 2; // Maximum tilt angle in degrees

let currentRotateX = 0;
let currentRotateY = 0;
let targetRotateX = 0;
let targetRotateY = 0;
let animationId: number | null = null;

// Check for reduced motion preference
const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

function lerp(start: number, end: number, factor: number): number {
  return start + (end - start) * factor;
}

function animate() {
  currentRotateX = lerp(currentRotateX, targetRotateX, 0.1);
  currentRotateY = lerp(currentRotateY, targetRotateY, 0.1);
  
  const parallaxY = parseFloat(tiltElement.style.getPropertyValue('--parallax-y') || '0');
  
  // Dynamic shadow based on tilt direction (light source from top-left)
  const shadowX = -currentRotateY * 8; // Shadow moves opposite to tilt
  const shadowY = currentRotateX * 8 + 20; // Base offset + tilt adjustment
  
  tiltElement.style.transform = `
    translateY(${parallaxY}px)
    rotateX(${currentRotateX}deg)
    rotateY(${currentRotateY}deg)
  `;
  
  tiltElement.style.boxShadow = `
    ${shadowX}px ${shadowY}px 40px -5px rgba(0, 0, 0, 0.3),
    ${shadowX * 1.5}px ${shadowY + 15}px 70px -10px rgba(0, 0, 0, 0.25)
  `;
  
  // Continue animating if not at target
  if (Math.abs(currentRotateX - targetRotateX) > 0.01 || Math.abs(currentRotateY - targetRotateY) > 0.01) {
    animationId = requestAnimationFrame(animate);
  } else {
    animationId = null;
  }
}

// Parallax effect for hero
function handleParallax() {
  const scrollY = window.scrollY;
  const heroBottom = hero.offsetTop + hero.offsetHeight;
  
  // Only apply parallax while hero is visible
  if (scrollY < heroBottom) {
    const parallaxOffset = scrollY * 0.1; // Slower scroll = depth effect
    hero.style.setProperty('--parallax-y', `${parallaxOffset}`);
    
    // Trigger animation loop to apply the parallax
    if (!animationId) {
      animationId = requestAnimationFrame(animate);
    }
  }
}

window.addEventListener('scroll', handleParallax, { passive: true });

function handleMouseMove(e: MouseEvent) {
  if (prefersReducedMotion) return;
  
  const rect = tiltElement.getBoundingClientRect();
  const centerX = rect.left + rect.width / 2;
  const centerY = rect.top + rect.height / 2;
  
  // Calculate mouse position relative to hero center, normalized to viewport
  const mouseX = (e.clientX - centerX) / (window.innerWidth / 2);
  const mouseY = (e.clientY - centerY) / (window.innerHeight / 2);
  
  // Clamp values to prevent extreme tilts when mouse is far away
  const clampedX = Math.max(-1, Math.min(1, mouseX));
  const clampedY = Math.max(-1, Math.min(1, mouseY));
  
  // Invert Y for natural tilt feel (tilt toward mouse)
  targetRotateX = -clampedY * maxTilt;
  targetRotateY = clampedX * maxTilt;
  
  if (!animationId) {
    animationId = requestAnimationFrame(animate);
  }
}

// Only enable on larger screens (no touch)
if (window.matchMedia('(min-width: 1024px) and (hover: hover)').matches) {
  // Track mouse across entire document
  document.addEventListener('mousemove', handleMouseMove, { passive: true });
}
</script>

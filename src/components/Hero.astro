---
/**
 * Hero section with animated role text rotation.
 *
 * Roles cycle automatically to showcase versatility without overwhelming visitors.
 * Uses aria-live for screen reader announcements and aria-hidden to prevent
 * reading all roles at once. Profile image uses Picture for format negotiation.
 */
import { Picture } from "astro:assets";
import profileImage from "../assets/peter-profile.png";

type Props = Record<string, never>;

// Displayed in rotation — order matters for first impression
const roles = [
  "Web Developer",
  "Game Developer",
  "AI Enthusiast",
  "Laravel Artisan",
  "WordPress Expert",
  "GameDev Teacher",
  "WebDev Architect",
  "Astro Amateur",
  "Prompt Engineer",
  "Game Jam Organizer",
  "Unity3D Developer",
  "VR Developer",
];
---

<div class="hero-wrapper">
  <section class="hero" id="hero" data-tilt>
    <div class="hero__container">
      <div class="hero__content" style="max-height: 223px">
        <h1 class="hero__title hero__title--handwriting">Hello!</h1>
        <div class="hero__intro">
          <!-- Hidden strings for SEO crawlers and typed.js source -->
          <div id="typed-strings" class="sr-only">
            {roles.map((role) => <p>{role}</p>)}
          </div>
          <p>
            I'm <strong>Peter</strong> —{" "}
            <strong class="hero__role-wrapper">
              <span id="typed-roles" aria-live="polite" aria-atomic="true"
              ></span>
            </strong>{" "}
            from <strong>Denmark.</strong>
          </p>
          <p>Always building for someone, not just something.</p>
        </div>
      </div>
      <div class="hero__image-wrapper">
        <Picture
          src={profileImage}
          formats={["avif", "webp"]}
          alt="Peter Chr. Jørgensen"
          class="hero__image"
          width={250}
          height={250}
          loading="eager"
          fetchpriority="high"
          densities={[1, 2]}
        />
      </div>
    </div>
  </section>
</div>

<script>
  /**
   * Hero Component Interactions
   * - Typed.js role rotation with viewport pause optimization
   * - 3D tilt effect with parallax scrolling
   */

  // ============================================================================
  // TYPED.JS ANIMATION
  // ============================================================================

  let typedInstance: any = null;
  let typedObserver: IntersectionObserver | null = null;

  async function initTypedAnimation() {
    const typedElement = document.querySelector("#typed-roles") as HTMLElement;
    const stringsElement = document.querySelector(
      "#typed-strings",
    ) as HTMLElement;
    const heroElement = document.querySelector(".hero") as HTMLElement;

    if (!typedElement || !stringsElement || !heroElement) return;

    // Respect reduced motion preference
    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)",
    ).matches;

    if (prefersReducedMotion) {
      typedElement.textContent = "Web Developer";
      return;
    }

    try {
      const { default: Typed } = await import("typed.js");

      // Cleanup existing instances
      if (typedInstance) {
        typedInstance.destroy();
        typedInstance = null;
      }
      if (typedObserver) {
        typedObserver.disconnect();
        typedObserver = null;
      }

      // Initialize typing animation
      typedInstance = new Typed("#typed-roles", {
        stringsElement: "#typed-strings",
        typeSpeed: 50,
        backSpeed: 30,
        backDelay: 2000,
        startDelay: 500,
        loop: true,
        showCursor: true,
        cursorChar: "|",
      });

      // Pause animation when out of viewport to save CPU
      typedObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (typedInstance) {
              entry.isIntersecting
                ? typedInstance.start()
                : typedInstance.stop();
            }
          });
        },
        { threshold: 0.1 },
      );

      typedObserver.observe(heroElement);
    } catch (error) {
      console.error("Failed to initialize Typed.js:", error);
      typedElement.textContent = "Web Developer";
    }
  }

  function startTypedAnimation() {
    if ("requestIdleCallback" in window) {
      requestIdleCallback(() => initTypedAnimation());
    } else {
      setTimeout(() => initTypedAnimation(), 1);
    }
  }

  function cleanupTypedAnimation() {
    if (typedObserver) {
      typedObserver.disconnect();
      typedObserver = null;
    }
    if (typedInstance) {
      typedInstance.destroy();
      typedInstance = null;
    }
  }

  // ============================================================================
  // 3D TILT EFFECT
  // ============================================================================

  function initTiltEffect() {
    const hero = document.querySelector(".hero") as HTMLElement;
    const tiltElement = document.querySelector("[data-tilt]") as HTMLElement;

    if (!hero || !tiltElement) return;

    const maxTilt = 2;
    let currentRotateX = 0;
    let currentRotateY = 0;
    let targetRotateX = 0;
    let targetRotateY = 0;
    let animationId: number | null = null;

    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)",
    ).matches;

    function lerp(start: number, end: number, factor: number): number {
      return start + (end - start) * factor;
    }

    function animate() {
      currentRotateX = lerp(currentRotateX, targetRotateX, 0.1);
      currentRotateY = lerp(currentRotateY, targetRotateY, 0.1);

      const parallaxY = parseFloat(
        tiltElement.style.getPropertyValue("--parallax-y") || "0",
      );
      const shadowX = -currentRotateY * 8;
      const shadowY = currentRotateX * 8 + 20;
      const sheenOffset = 50 + currentRotateY * 8 - currentRotateX * 5;

      tiltElement.style.setProperty("--sheen-offset", `${sheenOffset}%`);
      tiltElement.style.transform = `
        translateY(${parallaxY}px)
        rotateX(${currentRotateX}deg)
        rotateY(${currentRotateY}deg)
      `;
      tiltElement.style.boxShadow = `
        ${shadowX}px ${shadowY}px 40px -5px rgba(0, 0, 0, 0.3),
        ${shadowX * 1.5}px ${shadowY + 15}px 70px -10px rgba(0, 0, 0, 0.25)
      `;

      if (
        Math.abs(currentRotateX - targetRotateX) > 0.01 ||
        Math.abs(currentRotateY - targetRotateY) > 0.01
      ) {
        animationId = requestAnimationFrame(animate);
      } else {
        animationId = null;
      }
    }

    function handleParallax() {
      const scrollY = window.scrollY;
      const heroBottom = hero.offsetTop + hero.offsetHeight;

      if (scrollY < heroBottom) {
        const isMobile = window.matchMedia("(max-width: 1023px)").matches;
        const parallaxFactor = isMobile ? 0.03 : 0.1;
        const parallaxOffset = scrollY * parallaxFactor;
        hero.style.setProperty("--parallax-y", `${parallaxOffset}`);

        if (!animationId) {
          animationId = requestAnimationFrame(animate);
        }
      }
    }

    function handleMouseMove(e: MouseEvent) {
      if (prefersReducedMotion) return;

      const rect = tiltElement.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;

      const mouseX = (e.clientX - centerX) / (window.innerWidth / 2);
      const mouseY = (e.clientY - centerY) / (window.innerHeight / 2);

      const clampedX = Math.max(-1, Math.min(1, mouseX));
      const clampedY = Math.max(-1, Math.min(1, mouseY));

      targetRotateX = -clampedY * maxTilt;
      targetRotateY = clampedX * maxTilt;

      if (!animationId) {
        animationId = requestAnimationFrame(animate);
      }
    }

    function handleTouchMove(e: TouchEvent) {
      if (prefersReducedMotion) return;

      const touch = e.touches[0];
      const rect = tiltElement.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;

      const touchX = (touch.clientX - centerX) / (window.innerWidth / 2);
      const touchY = (touch.clientY - centerY) / (window.innerHeight / 2);

      const clampedX = Math.max(-1, Math.min(1, touchX));
      const clampedY = Math.max(-1, Math.min(1, touchY));

      targetRotateX = -clampedY * maxTilt;
      targetRotateY = clampedX * maxTilt;

      tiltElement.classList.add("is-tilting");

      if (!animationId) {
        animationId = requestAnimationFrame(animate);
      }
    }

    function handleTouchEnd() {
      targetRotateX = 0;
      targetRotateY = 0;
      tiltElement.classList.remove("is-tilting");

      if (!animationId) {
        animationId = requestAnimationFrame(animate);
      }
    }

    // Attach event listeners
    window.addEventListener("scroll", handleParallax, { passive: true });

    if (window.matchMedia("(min-width: 1024px) and (hover: hover)").matches) {
      document.addEventListener("mousemove", handleMouseMove, {
        passive: true,
      });
    }

    if (window.matchMedia("(max-width: 1023px)").matches) {
      document.addEventListener("touchmove", handleTouchMove, {
        passive: true,
      });
      document.addEventListener("touchend", handleTouchEnd);
      document.addEventListener("touchcancel", handleTouchEnd);
    }

    // Cleanup for view transitions
    return () => {
      if (animationId !== null) {
        cancelAnimationFrame(animationId);
      }
      window.removeEventListener("scroll", handleParallax);
      document.removeEventListener("mousemove", handleMouseMove);
      document.removeEventListener("touchmove", handleTouchMove);
      document.removeEventListener("touchend", handleTouchEnd);
      document.removeEventListener("touchcancel", handleTouchEnd);
    };
  }

  // ============================================================================
  // INITIALIZATION
  // ============================================================================

  function initHero() {
    const heroExists = document.querySelector("#typed-roles") !== null;
    if (!heroExists) return;

    startTypedAnimation();
    const cleanupTilt = initTiltEffect();

    // Cleanup handler for view transitions
    const cleanup = () => {
      cleanupTypedAnimation();
      if (cleanupTilt) cleanupTilt();
    };

    return cleanup;
  }

  // Prevent duplicate initialization
  if (!(window as any).__heroInitialized) {
    (window as any).__heroInitialized = true;

    // Initial load
    const cleanup = initHero();

    // View transitions support
    document.addEventListener("astro:page-load", initHero);
    document.addEventListener("astro:before-preparation", () => {
      if (cleanup) cleanup();
      (window as any).__heroInitialized = false;
    });
  }
</script>

<style lang="scss">
  @use "../styles/variables" as *;
  @use "../styles/mixins" as *;

  .hero-wrapper {
    padding: $space-md;
    max-width: 1700px;
    margin: 0 auto;
    perspective: 1200px;
    perspective-origin: center center;

    @include respond-to(md) {
      padding: $space-sm;
      max-width: 100%;
    }
  }

  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: $space-4xl $space-xl;
    padding-top: calc($space-4xl + 60px);
    background-color: $color-blue;
    background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg width='52' height='26' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 10c0-2.21-1.79-4-4-4a6 6 0 01-6-6h2c0 2.21 1.79 4 4 4a6 6 0 016 6c0 2.21 1.79 4 4 4a6 6 0 016 6c0 2.21 1.79 4 4 4v2a6 6 0 01-6-6c0-2.21-1.79-4-4-4a6 6 0 01-6-6zm25.464-1.95l8.486 8.486-1.414 1.414-8.486-8.486 1.414-1.414z' fill='%23DCEEFB' fill-opacity='.08' fill-rule='evenodd'/%3E%3C/svg%3E");
    border-radius: $space-lg;
    position: relative;
    box-shadow:
      0 10px 30px -5px rgba(0, 0, 0, 0.2),
      0 20px 50px -10px rgba(0, 0, 0, 0.15);
    transform-style: preserve-3d;
    transition:
      transform 0.15s ease-out,
      box-shadow 0.3s ease-out;
    will-change: transform;

    // CLS prevention: Lock height on tiny screens where text must wrap
    @media (max-width: 479px) {
      max-height: 650px;
      overflow: visible;
    }

    // Dynamic light sheen offset (%) - slides highlight across surface
    --sheen-offset: 50%;

    &::before {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: inherit;
      background: linear-gradient(
        115deg,
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 0) calc(var(--sheen-offset) - 50%),
        rgba(255, 255, 255, 0.06) var(--sheen-offset),
        rgba(255, 255, 255, 0) calc(var(--sheen-offset) + 50%),
        rgba(255, 255, 255, 0) 100%
      );
      pointer-events: none;
      transform: translateZ(2px);
    }

    // Enhance shadow on tilt
    &.is-tilting {
      box-shadow:
        0 15px 40px -8px rgba(0, 0, 0, 0.25),
        0 25px 55px -12px rgba(0, 0, 0, 0.18);
    }

    @include respond-to(md) {
      padding: $space-3xl $space-lg;
      padding-top: calc($space-3xl + 60px);
      border-radius: $space-md;
      min-height: auto;
    }

    &__container {
      max-width: $max-width;
      margin: 0 auto;
      width: 100%;
      display: grid;
      grid-template-columns: 1.2fr 0.8fr;
      gap: $space-4xl;
      align-items: center;

      @include respond-to(lg) {
        grid-template-columns: 1fr;
        gap: $space-2xl;
        text-align: center;
      }
    }

    &__content {
      transform: translateZ(15px);
      overflow: visible;

      @include respond-to(lg) {
        order: 2;
        transform: none;
      }
    }

    &__title {
      font-size: $font-size-hero;
      font-weight: 300;
      font-style: italic;
      line-height: 1;
      color: $color-text-light;
      margin-bottom: $space-2xl;

      &--handwriting {
        font-family: var(--font-caveat), cursive;
        font-weight: 700;
        font-style: normal;
        font-size: calc(#{$font-size-hero} * 1.3);
      }
    }

    &__intro {
      font-size: clamp($font-size-lg, 2.5vw, $font-size-2xl);
      color: $color-text-light;
      line-height: 1.6;

      p {
        margin: 0 0 $space-sm 0;

        // CLS prevention: On larger screens, force text to single line
        // to prevent vertical shifts as role text changes length.
        // Text can overflow horizontally over image column.
        @media (min-width: 480px) {
          white-space: nowrap;
          overflow: visible;
        }
      }

      strong {
        font-weight: 600;
      }
    }

    &__subline {
      font-size: clamp($font-size-base, 2vw, $font-size-lg);
      color: rgba($color-text-light, 0.7);
      font-style: italic;
      margin-top: $space-md;
    }

    &__role-wrapper {
      color: $color-orange;
      display: inline;
      font-style: normal;

      // Typed.js cursor styling
      :global(.typed-cursor) {
        color: $color-orange;
        font-weight: 400;
        opacity: 1;
        animation: blink 0.7s infinite;

        // Respect reduced motion preference (WCAG 2.3.3)
        @media (prefers-reduced-motion: reduce) {
          animation: none;
          opacity: 0; // Hide cursor entirely for reduced motion
        }
      }
    }
  }

  // Screen reader only - hidden but accessible
  .sr-only {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  .hero {
    &__image-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      max-width: 320px;
      aspect-ratio: 1;
      margin: 0 auto;

      @include respond-to(lg) {
        order: 1;
      }

      @include respond-to(md) {
        max-width: 250px;
      }
    }

    &__image {
      width: 100%;
      height: 100%;
      border-radius: 1000px;
      object-fit: cover;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      border: 4px solid rgba(255, 255, 255, 0.1);
      transform: translateZ(20px);
      transition: transform 0.3s ease-out;

      @include respond-to(md) {
        max-width: 250px;
        transform: none;
      }
    }

    &__scroll-indicator {
      position: absolute;
      bottom: $space-3xl;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: $space-sm;
      color: $color-text-light;
      font-size: $font-size-xs;
      font-weight: 600;
      letter-spacing: 0.15em;
      opacity: 0.7;
      animation: bounce 2s infinite;

      @include respond-to(md) {
        display: none;
      }
    }
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
</style>

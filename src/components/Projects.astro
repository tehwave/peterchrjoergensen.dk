---
import ProjectCard from "./ProjectCard.astro";
import AnimateOnScroll from "./AnimateOnScroll.astro";
import { projects } from "../data/projects";

type Props = Record<string, never>;

const categories = [
  { id: "all", label: "All" },
  { id: "web", label: "Web" },
  { id: "games", label: "Games" },
] as const;
---

<section class="projects" id="projects">
  <div class="projects__container">
    <AnimateOnScroll class="projects__header">
      <span class="projects__label">SELECTED WORK</span>
      <h2 class="projects__heading">Projects I've crafted<br /><span class="projects__subtitle">over the years</span></h2>
      <div class="projects__filters" role="tablist" aria-label="Filter projects by category">
        {categories.map((cat) => (
          <button
            class:list={["projects__filter", { "projects__filter--active": cat.id === "all" }]}
            data-filter={cat.id}
            type="button"
            role="tab"
            aria-selected={cat.id === "all" ? "true" : "false"}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </AnimateOnScroll>
    <div class="projects__grid">
      {projects.map((project, index) => (
        <div class:list={["projects__item"]} data-category={project.category}>
          <ProjectCard 
            title={project.title} 
            description={project.description}
            alt={project.alt}
            tags={project.tags}
            image={project.image}
            link={project.link}
            animationDelay={index}
          />
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  function initFilters() {
    const filterButtons = document.querySelectorAll<HTMLButtonElement>('.projects__filter');
    const projectItems = document.querySelectorAll<HTMLElement>('.projects__item');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.dataset.filter;
        
        // Update active button
        filterButtons.forEach(btn => {
          btn.classList.remove('projects__filter--active');
          btn.setAttribute('aria-selected', 'false');
        });
        button.classList.add('projects__filter--active');
        button.setAttribute('aria-selected', 'true');
        
        // Filter projects
        projectItems.forEach(item => {
          const category = item.dataset.category;
          const shouldShow = filter === 'all' || category === filter;
          
          if (shouldShow) {
            item.style.display = '';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  }

  // Run on initial load
  initFilters();

  // Re-run after view transitions
  document.addEventListener('astro:after-swap', initFilters);
</script>

<style lang="scss">
  @use "../styles/variables" as *;
  @use "../styles/mixins" as *;

  .projects {
    position: relative;
    padding: $space-4xl $space-xl;
    background-color: $color-cream;
    background-image: url("/textures/cubes.png");

    @include respond-to(md) {
      padding: $space-3xl $space-lg;
    }

    &__container {
      position: relative;
      z-index: 1;
      max-width: $max-width;
      margin: 0 auto;
    }

    &__header {
      margin-bottom: $space-3xl;
    }

    &__label {
      display: block;
      color: $color-orange;
      font-size: $font-size-sm;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      margin-bottom: $space-md;
    }

    &__heading {
      font-size: clamp($font-size-2xl, 4vw, $font-size-3xl);
      color: $color-text-dark;
      line-height: 1.2;
    }

    &__subtitle {
      color: $color-text-muted;
    }

    &__filters {
      display: flex;
      gap: $space-sm;
      margin-top: $space-xl;
      flex-wrap: wrap;
    }

    &__filter {
      padding: $space-sm $space-lg;
      border: 2px solid $color-border;
      border-radius: 100px;
      background: $color-white;
      color: $color-text-muted;
      font-family: inherit;
      font-size: $font-size-sm;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;

      &:hover {
        border-color: $color-text-dark;
        color: $color-text-dark;
      }

      &--active {
        background: $color-orange;
        border-color: $color-orange;
        color: $color-white;

        &:hover {
          background: $color-orange-hover;
          border-color: $color-orange-hover;
          color: $color-white;
        }
      }
    }

    &__grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: $space-xl;

      @include respond-to(lg) {
        grid-template-columns: repeat(2, 1fr);
      }

      @include respond-to(sm) {
        grid-template-columns: 1fr;
        gap: $space-lg;
      }
    }

    &__item {
      transition: opacity 0.3s ease;
    }
  }
</style>
